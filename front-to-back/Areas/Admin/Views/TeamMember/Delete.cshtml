@using front_to_back.Models
@model TeamMember

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
             <div class="col-md-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  
                  <p class="card-description">
                    Delete team member
                  </p>
                  
                   <span>Name:</span>
                   <span>@Model.Name</span>

                   <br/>
                       <br/>
                   <span>Surname:</span>
                   <span>@Model.Surname</span>

                        <br/>
                            <br/>

                  <span>Position:</span>
                   <span>@Model.Position</span>

                   <br />

                   <span>Photo:</span>
                   <img style="width: 200px; height: 200px; border-radius: 10px;" src="~/assets/img/@Model.PhotoPath" />

                   <form method="post" asp-action="deletecomponent" asp-controller="teammember" asp-area="admin" asp-route-id="@Model.Id">
                      <button onclick="confirm('eminsinizmi?')" class="btn btn-danger">Sil</button>
                   </form>
                </div>
              </div>
            </div>
        </div>
    </div>
</div>
