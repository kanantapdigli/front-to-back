@using front_to_back.Areas.Admin.ViewModels.TeamMember
@model TeamMemberUpdateViewModel
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">

                        <p class="card-description">
                            Update team member
                        </p>
                        <form enctype="multipart/form-data" method="post" asp-action="update" asp-controller="teammember" asp-area="admin" class="forms-sample">
                           
                            <div class="form-group">
                                <label asp-for="Name"></label>
                                <input class="form-control" asp-for="Name">
                                <span asp-validation-for="Name"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Surname"></label>
                                <input class="form-control" asp-for="Surname">
                                <span asp-validation-for="Surname"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Position"></label>
                                <input class="form-control" asp-for="Position">
                                <span asp-validation-for="Position"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Photo"></label>
                                <img style="width:200px; height: 200px; border-radius: 50%;" src="~/assets/img/@Model.PhotoPath" />

                                <input class="form-control" asp-for="Photo" />
                                <span asp-validation-for="Photo"></span>
                            </div>

                            <button type="submit" class="btn btn-primary me-2">Submit</button>

                            <a class="btn btn-light" asp-action="index" asp-controller="recentwork" asp-area="admin">Cancel</a>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
